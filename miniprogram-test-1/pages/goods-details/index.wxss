/* 商品砍价 */
.goods_kanjia{
  background-color: #F2f2f2;
  padding-left: 20rpx;
  font-size: 28rpx;
  color: #999;
  line-height: 80rpx;
}
.goods_cells_box{
  padding-left: 20rpx;
  position: relative;
}
.goods_cells_box::before{
  border-top: 1px solid #d9d9d9;
  top: 0;
}
.goods_cells_box::before,
.goods_cells_box::after{
  content: "";
  position: absolute;
  left: 0;
  right: 0;
}
.goods_cells_box::after{
  border-bottom: 1px solid #d9d9d9;
  bottom: 0;
}
.goods_cell{
  position: relative;
  display: flex;
  padding: 20rpx 0;
}
.goods_cell::after{
  display: flex;
  content: "";
  position: absolute;
  left: 0;
  right: 0;
   border-bottom: 1px solid #d9d9d9;
  bottom: 0;
}
/* 最后一个孩子元素添加的线 不显示 */
.goods_cell:last-child::after{
  display: none;
}

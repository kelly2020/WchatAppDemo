
.container{
   height: 100vh;
   padding: 0;

}
.swiper-container{
  width: 100vw;
  height: 100vh;
  position: relative;
}
.swiper-box{
  width: 100vw;
  height: 100vh;  
}
swiper-item image{
  width: 100%;
  height: 100vh;
  display: inline-block;
  overflow: hidden;
}
.swiper-container .dots{
  width: 160rpx;
  height: 60rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-80rpx);
  bottom: 90rpx;
  display: flex;
  justify-content: center;
}

.swiper-container .dots .dot{
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  background-color:white;
  margin: 0 6rpx;
  transition: all .6s;
  opacity: .5
}
.swiper-container .dots .dot.active{
   width: 28rpx;
   opacity: 1;
}

button{
  font-size: 10px;
}


